#include <stdio.h>

int main() {
	int i = 0;
	int j = 0;
	int N = 0;
	int day[15] = { 0, };
	int pay[15] = { 0, };
	int now_day = 0;
	int next_day = 0;
	int pay_sum = 0;
	int pay_sum_max = 0;
	int temp_next_day = 0;
	int flag = 0;
	scanf("%d", &N);

	for (i = 0; i<N; i++)
	{
		scanf("%d", &day[i]);
		scanf("%d", &pay[i]);
	}

	for (j = 0; j<N; j++)
	{
		if (j >= day[0])
			break;

		now_day = j;

		pay_sum = 0;
		next_day = 0;
		flag = 0;
		while (now_day<N+1)
		{
			if (now_day + day[now_day]<N+1)
			{
				pay_sum = pay_sum + pay[now_day];
				next_day = now_day + day[now_day];
				for (i = 1;i<N;i++)
				{
					if (next_day + day[next_day] <= next_day + i)
						break;
					if(pay[next_day]<pay[next_day+i])
						if (next_day + day[next_day+i] < N + 1)
						{
							temp_next_day = next_day + i;
							flag = 1;
						}
				}
				if (flag == 1)
				{
					next_day = temp_next_day;
				}

			}
			if (now_day == next_day)
				break;
			now_day = next_day;
		}
		if (pay_sum_max<pay_sum)
		{
			pay_sum_max = pay_sum;
		}
	}
	printf("%d", pay_sum_max);

}
